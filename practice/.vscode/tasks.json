{
	"version": "2.0.0",
	"tasks": [
	  {
		"label": "Build C++",
		"type": "shell",
		"command": "g++",
		"args": ["-std=c++11", "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}"],
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"presentation": {
		  "reveal": "always",
		  "panel": "new"
		},
		"problemMatcher": "$gcc"
	  }
	]
  }
  